@model IEnumerable<PROG_P1.Models.Claims>
@* @inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
 *@

@{
    ViewData["Title"] = "Review Claims";
}
<style>
    .button {
        color: white;
        background-color: #4D4DFF;
        padding: 8px 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 12px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 5px;
        width: auto;
        padding: 10px 20px;
    }
</style>

<h1 class="text-center">Review Claims</h1>

<div class="container">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Lecturer name</th>
                <th>@Html.DisplayNameFor(model => model.Module)</th>
                <th>Hours Worked</th>
                <th>Hourly wage</th>
                <th>Total earnings</th>
                <th>Supporting Note</th>
                <th>Status</th>
                <th>View supporting documents</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Module)</td>
                    <td>@Html.DisplayFor(modelItem => item.HoursWorked)</td>
                    <td>R @item.HourlyWage.ToString("N2")</td>
                    <td>R @item.TotalEarnings.ToString("N2")</td>
                    <td>@Html.DisplayFor(modelItem => item.SupportingNote)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        @if (item.Document != null && item.Document.Any())
                        {
                            foreach (var doc in item.Document)
                            {
                                <a asp-action="Download" asp-route-fileName="@doc.FileName" class="button">View Document</a>
                            }
                        }
                        else
                        {
                            <span>No documents</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex justify-content-around">
                            <a asp-action="Details" asp-route-id="@item.ClaimsID" class="btn btn-info btn-sm">Details</a>
                           
                                <a asp-action="Delete" asp-route-id="@item.ClaimsID" class="btn btn-info btn-sm">Delete</a>
                            
                            @if (User.IsInRole("Lecturer"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.ClaimsID" class="btn btn-info btn-sm">Edit</a>
                            }
                            @if (item.Status == "Pending" && (User.IsInRole("Programme Coordinator") || User.IsInRole("Academic Manager")))
                            {
                                <a asp-action="Approve" asp-route-id="@item.ClaimsID" class="btn btn-success">Approve</a>
                                <a asp-action="Reject" asp-route-id="@item.ClaimsID" class="btn btn-secondary">Reject</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


